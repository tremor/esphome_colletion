    ssid: "Lilygo-T5-1 Fallback Hotspot"
    password: "PASSWORD"

mqtt:
  broker: 10.10.30.17
  username: USERNAME
  password: PASSWORD
  discovery: True
  on_message:
  - topic: tilygo-t5-1/ota_mode
    payload: 'ON'
    then:
      - deep_sleep.prevent: deep_sleep_1
  - topic: tilygo-t5-1/sleep_mode
    payload: 'ON'
    then:
      - deep_sleep.enter: deep_sleep_1
      
deep_sleep:
  run_duration: ${run_time} 
  sleep_duration: ${sleep_time}
  id: deep_sleep_1
  esp32_ext1_wakeup:
    pins: GPIO39
    mode: ALL_LOW
    
spi:
  clk_pin: 18
  mosi_pin: 23
  
